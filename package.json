{
    "author": "Oscar Busk <oscar.busk@gmail.com>",
    "name": "walkable-buffer",
    "version": "2.0.2",
    "description": "🚶🛡️ A class for easily reading data from binary Buffers",
    "license": "MIT",
    "repository": "git+https://github.com/oBusk/walkable-buffer.git",
    "scripts": {
        "build": "pika build",
        "deploy": "pika publish",
        "jest": "jest",
        "test": "jest",
        "posttest": "npm run typecheck && npm run lint",
        "lint": "tslint --project tsconfig.json --format stylish",
        "typecheck": "tsc --noEmit",
        "test:watch": "jest --watch --updateSnapshot",
        "version": "npm run build && npm run docs && git add api && git add api -u",
        "docs": "typedoc --out api --mode file --excludeExternals --excludeNotExported --excludePrivate --excludeProtected --tsconfig src/tsconfig.app.json --theme markdown --readme none"
    },
    "keywords": [
        "binary",
        "buffer",
        "walk"
    ],
    "engines": {
        "node": "^10.15.3 ||  >=12.0.0"
    },
    "dependencies": {
        "@types/node": "^10.13.0",
        "tslib": "^1.10.0"
    },
    "devDependencies": {
        "@pika/pack": "^0.5.0",
        "@pika/plugin-build-node": "^0.6.0",
        "@pika/plugin-build-web": "^0.6.0",
        "@pika/plugin-ts-standard-pkg": "^0.6.0",
        "@pika/plugin-bundle-web": "^0.6.0",
        "@types/jest": "^24.0.16",
        "jest": "^24.8.0",
        "ts-jest": "^24.0.2",
        "tslint": "^5.18.0",
        "typedoc": "^0.15.0",
        "typedoc-plugin-markdown": "^2.1.1",
        "typescript": "^3.5.3",
        "typescript-tslint-plugin": "^0.5.4"
    },
    "@pika/pack": {
        "pipeline": [
            [
                "@pika/plugin-ts-standard-pkg",
                {
                    "tsconfig": "src/tsconfig.app.json"
                }
            ],
            [
                "@pika/plugin-build-node",
                {
                    "minNodeVersion": 10
                }
            ],
            [
                "@pika/plugin-build-web"
            ],
            [
                "@pika/plugin-bundle-web",
                {
                    "entrypoint": "unpkg"
                }
            ]
        ]
    }
}
