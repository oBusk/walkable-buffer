{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Related Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": [
                "--no-cache",
                "--runInBand",
                "--findRelatedTests",
                "${relativeFile}",
                "--",
                "--debuggable"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],
            "windows": {
                "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            }
        },
        {
            "name": "Run All Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": [
                "--no-cache",
                "--runInBand",
                "--",
                "--debuggable"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],
            "windows": {
                "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            }
        },
    ]
}
